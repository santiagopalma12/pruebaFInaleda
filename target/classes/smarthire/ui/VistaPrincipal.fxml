<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<BorderPane fx:controller="smarthire.ui.controller.VistaPrincipalController" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <VBox spacing="10.0" style="-fx-padding: 15;">
            <children>
                <Button onAction="#irGestionEmpleados" text="Gestión de Empleados" prefWidth="180"/>
                <Button onAction="#irRedColaboracion" text="Red de Colaboración" prefWidth="180"/>
                <Button onAction="#irAnalisis" text="Análisis Individual" prefWidth="180"/>
                <Button onAction="#irRecomendadorEquipo" text="Recomendar Equipo" prefWidth="180" style="-fx-font-weight: bold; -fx-base: #ffc107;"/>
                <Button onAction="#irHistorial" text="Historial de Acciones" prefWidth="180"/>
            </children>
        </VBox>
    </left>
    <center>
        <BorderPane fx:id="contenedorCentral" BorderPane.alignment="CENTER" />
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</BorderPane>